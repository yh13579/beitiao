<!-- 手机号 --> 
<van-field 
  value="{{ phone}}" 
  label="手机号"  
  placeholder="请输入手机号" 
  bind:change="getPhone" 
  error-message="{{errorPhone}}"/>   
<view class="line"></view>


<!-- 性别 -->
<view bindtap="showPopup">
   <van-field
    label="性别"
    placeholder="选择性别"
    value="{{gender}}"
    bind:change="getgender"
    disabled/>
</view>
<view class="line"></view>


<!-- 性别弹出选择器 -->
<van-popup 
  show="{{ show }}" 
  bind:close="onClose"       
  position="bottom"
  custom-style="height: 40%">
    <van-picker title="选择性别" show-toolbar 
    columns="{{ columns }}"  
    bind:cancel="onClose"
    bind:confirm="onConfirm"/>
</van-popup>


<!-- 院系 -->
<view bindtap="showPopupDepartment">
  <van-field
  label="院系"
  placeholder="选择院系"   
  value="{{department}}"
  bind:change="getDepartment"
  disabled/>
</view>
<view class="line"></view>


<!-- 院系弹出选择器 -->
<van-popup 
  show="{{ show2 }}" 
  bind:close="onClose2"  
  position="bottom"
  custom-style="height: 40%">
    <van-picker title="选择院系" show-toolbar 
    columns="{{ columns2 }}"  
    bind:cancel="onClose2"
    bind:confirm="onConfirm2"/>
</van-popup>


<!-- 班级 -->
<van-field 
  label="班级" 
  placeholder="例如：XX机器人XX班" 
  value="{{classroom}}" 
  bind:change="getclassroom"/>
<view class="line"></view>


<!-- 个性签名 -->
<van-field  
  value="{{signature}}" 
  label="个性签名" 
  placeholder="做一个有个性的人吧..." bind:change="getsignature"/>
<view class="line"></view>


<!-- 提交按钮 -->
<button class="submit" bindtap="submit">保存信息</button>  




