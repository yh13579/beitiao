   }
.item {        
  display: flex;
  flex-direction: row;
  background-color: rgb(255,248,244);
}
.title {         
  background-color: #FFF8F4;
  padding-top: 30rpx;
  padding-bottom: 30rpx;
  padding-left: 30rpx;
  font-size: 30rpx;
  position: relative;
  left: 25rpx;
}
.line {         
  border: 4rpx solid #ccc;
  opacity: 0.2; 
}
.cell_group{  
    background-color: #FFF8F4;
    display: flex;
    flex-direction: row;
}
.avatarurl{        
    border-radius: 50%;
    width: 125rpx;
    height: 125rpx;
    position: relative;
    left: 10rpx;
}
.nickname{        
    font-size: x-large;
    position: absolute;
    left: 210rpx;
    top: 35rpx;
    height: 90rpx;
    width: 520rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}
.img{   
    width: 40rpx;
    height: 40rpx;
    position: relative;
    top: 12rpx;
    left: -25rpx;
}
